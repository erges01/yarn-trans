{
  "manifest_version": 3,
  "name": "YarnGPT Live Pro",
  "version": "1.0",
  "permissions": [
    "tabCapture", 
    "offscreen", 
    "storage", 
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}